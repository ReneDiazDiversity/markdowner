        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown', href="#") View
            b.caret
          ul.dropdown-menu
            li
              a#toggle-sidebar(href='#') Toggle Sidebar
                span.pull-right &#x2318;H
            li
              a#toggle-horizontal(href='#') Toggle Horizontal View

     

      ul.nav.pull-right
        li
          a#fullscreen-button(href='#')
            i.icon-fullscreen.icon-white

      - if (user)
        ul.nav.pull-right
          li
            a(href="#user-box", role="button", data-toggle="modal")
              img.user-avatar(src=user.twitterObj._json.profile_image_url, alt=user.twitterObj.username)
              = user.twitterObj.username


  div#filelist.filestructure.well
    ul.nav.nav-list


  div.tool-wrapper
    div#editor.editor
    div.markdown#compiled
      p.weak-text Compiled Output
      div.compiled.github

  
  include fileOptions
  include userBox

  div#load-screen.saving-screen
    div.progress.progress-striped.active
      div.bar(style='width: 100%')
        p.load-text Loading...

  script(src='http://cdnjs.cloudflare.com/ajax/libs/showdown/0.3.1/showdown.min.js')

  script(src='js/vendor/require.js')

  script
    require(['js/main'], function (App) {
      App.init();
    });
    
    
