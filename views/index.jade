extends layout

block content
  
  div#top-nav.navbar.navbar-static-top.navbar-inverse
    div.navbar-inner
      a.brand(href='/') Markdowner
      ul.nav
        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown', href="#") File
            b.caret
          ul.dropdown-menu
            li
              a#savefile(href='#') Save
                span.pull-right &#x2318;S
            li.divider
            li
              a(href='#', style='color: #ccc') Export file 
                span.pull-right &#x2318;E
            li
              a#file-options-button(href='#') File Options

        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown', href="#") New
            b.caret
          ul.dropdown-menu
            li
              a#newfile(href='#') Markdown
                span.pull-right &#x2318;L
            li
              a#newfolder(href='#') Folder
                span.pull-right &#x21E7;&#x2318;L

        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown', href="#") Build
            b.caret
          ul.dropdown-menu
            li
              a#compile-button(href='#') Compile
                span.pull-right &#x2318;M

        li.dropdown.view
          a#theme-button.dropdown-toggle(data-toggle='dropdown', href="#") Theme
