    ul.nav.pull-right
      li
        a#fullscreen-button(tabindex="-1", href='#')
          i.icon-fullscreen

    - if (user)
      ul.nav.pull-right
        li
          a(tabindex="-1", href="#user-box", role="button", data-toggle="modal")
            img.user-avatar(src=user.twitterObj._json.profile_image_url, alt=user.twitterObj.username)
